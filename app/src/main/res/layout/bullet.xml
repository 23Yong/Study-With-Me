<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--상단 메뉴 탭(전체/공지/사진/파일)-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="@drawable/border_line">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/bulletMenuAllBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/selector_top_menu_button"
                android:textColor="@drawable/selector_top_menu_text"
                android:text="전체"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/bulletMenuNotiBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:background="@drawable/selector_top_menu_button"
                android:textColor="@drawable/selector_top_menu_text"
                android:text="공지"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/bulletMenuPicBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:background="@drawable/selector_top_menu_button"
                android:textColor="@drawable/selector_top_menu_text"
                android:text="사진"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/bulletMenuFileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:background="@drawable/selector_top_menu_button"
                android:textColor="@drawable/selector_top_menu_text"
                android:text="파일"
                android:textAlignment="center" />
        </RadioGroup>

    </LinearLayout>

    <!--메인부-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="178dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/nothing"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/bulletNothingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="등록된 글이 없습니다."
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/bulletWriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            app:rippleColor="#000000"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>