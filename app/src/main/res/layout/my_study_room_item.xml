<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/studyRecuit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/gray_box_radius"
            android:gravity="center"
            android:padding="5dp"
            android:text="모집중"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/studyField"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gray_box_radius"
            android:gravity="center"
            android:padding="5dp"
            android:text="프로그래밍"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <!--출석 시간, 등록 장소 table-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow>

            <TextView
                android:id="@+id/studyTitle"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="모바일 프로그래밍"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/currentMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="/" />

            <TextView
                android:id="@+id/maxMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="5" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/right_arrow" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/studyRegisterDay"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="2021.10.15"
                android:textColor="#9D9D9D" />
        </TableRow>

    </TableLayout>

</LinearLayout>